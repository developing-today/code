{
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        // just use python for starlark, until we figure something out
        "*.bzl": "starlark",
        "*.bxl": "starlark",
        "BUILD": "starlark",
        "PACKAGE": "starlark",
        ".pro": "prolog",
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.sl": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "starlark.lspPath": "buck2",
    "starlark.lspArguments": ["--isolation-dir=lsp", "lsp"],
}
